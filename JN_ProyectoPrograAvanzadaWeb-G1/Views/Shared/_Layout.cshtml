@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var rolId = HttpContextAccessor.HttpContext.Session.GetInt32("RolID");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>InvTech</title>

    <!-- Styles -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="#" onclick="redirectToDashboard(); return false;">InvTech</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>

        <!-- User Dropdown -->
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i> @HttpContextAccessor.HttpContext.Session.GetString("Usuario")
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Editar Perfil</a></li>
                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="CambiarContrasena">Cambiar contraseña</a></li>
                   
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-controller="Autenticacion" asp-action="Logout" method="post" class="px-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item text-danger fw-semibold">
                                <i class="fas fa-sign-out-alt me-2"></i> Cerrar sesión
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Layout -->
    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        @if (rolId == 1)
                        {
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard Administrador
                            </a>
                        }
                        else if (rolId == 2)
                        {
                            <a class="nav-link" asp-controller="Tecnico" asp-action="Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard Técnico
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Main">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                        }
                        @if (rolId == 1)
                        {
                            <div class="sb-sidenav-menu-heading">Administración</div>
                            
                            <!-- Catálogos -->
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseCatalogos">
                                <div class="sb-nav-link-icon"><i class="bi bi-folder"></i></div>
                                Catálogos
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseCatalogos" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Bodegas" asp-action="Index">
                                        <i class="bi bi-building me-2"></i>Bodegas
                                    </a>
                                    <a class="nav-link" asp-controller="EntradasMercancia" asp-action="Index">
                                        <i class="bi bi-box-arrow-in-down me-2"></i>
                                        Entradas de Mercancía
                                    </a>
                                    <a class="nav-link" asp-controller="Productos" asp-action="Index">
                                        <i class="bi bi-box-seam me-2"></i>Productos
                                    </a>
                                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                                        <i class="bi bi-people me-2"></i>Usuarios
                                    </a>
                                </nav>
                            </div>

                            <!-- Gestión -->
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseGestion">
                                <div class="sb-nav-link-icon"><i class="bi bi-clipboard-check"></i></div>
                                Gestión
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseGestion" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="/Solicitudes">
                                        <i class="bi bi-clipboard-check me-2"></i>Solicitudes
                                    </a>
                                    <a class="nav-link" href="/Movimientos">
                                        <i class="bi bi-arrow-left-right me-2"></i>Movimientos
                                    </a>
                                    <a class="nav-link" href="/Inventario">
                                        <i class="bi bi-clipboard-data me-2"></i>Inventario Global
                                    </a>
                                </nav>
                            </div>

                            <!-- Reportes y Auditoría -->
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseReportes">
                                <div class="sb-nav-link-icon"><i class="bi bi-graph-up"></i></div>
                                Reportes y Auditoría
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseReportes" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link"
                                       asp-controller="Auditoria"
                                       asp-action="ReportesKPI">
                                        <i class="bi bi-graph-up me-2"></i>Reportes y KPIs
                                    </a>
                                    <a class="nav-link"
                                       asp-controller="Auditoria"
                                       asp-action="Bitacora">
                                        <i class="bi bi-graph-up me-2"></i>Audiotoria y bitacora
                                    </a>
                                </nav>
                            </div>
                        }
                        else if (rolId == 2)
                        {
                            <div class="sb-sidenav-menu-heading">Operaciones</div>
                            
                            <!-- Inventario -->
                            <a class="nav-link" asp-controller="Tecnico" asp-action="MiInventario">
                                <div class="sb-nav-link-icon"><i class="bi bi-clipboard-data"></i></div>
                                Mi Inventario
                            </a>

                            <!-- Movimientos -->
                            <a class="nav-link" asp-controller="Tecnico" asp-action="Movimientos">
                                <div class="sb-nav-link-icon"><i class="bi bi-arrow-left-right"></i></div>
                                Movimientos
                            </a>

                            <!-- Solicitudes -->
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseSolicitudesTecnico">
                                <div class="sb-nav-link-icon"><i class="bi bi-clipboard-check"></i></div>
                                Solicitudes
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseSolicitudesTecnico" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Tecnico" asp-action="CrearSolicitud">
                                        <i class="bi bi-plus-circle me-2"></i>Crear Solicitud
                                    </a>
                                    <a class="nav-link" asp-controller="Tecnico" asp-action="Solicitudes">
                                        <i class="bi bi-list-check me-2"></i>Mis Solicitudes
                                    </a>
                                </nav>
                            </div>

                            @* <!-- Incidencias -->
                            <a class="nav-link" href="/Incidencias/Crear">
                                <div class="sb-nav-link-icon"><i class="bi bi-exclamation-triangle"></i></div>
                                Registrar Incidencia
                            </a> *@
                        }
                    </div>
                </div>

                <!-- Footer with session user -->
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    @HttpContextAccessor.HttpContext.Session.GetString("Usuario")
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; InvTech 2025</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>

    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        function redirectToDashboard() {
            var rolId = @(rolId ?? 0);
            if (rolId == 1) {
                window.location.href = '@Url.Action("Dashboard", "Admin")';
            } else if (rolId == 2) {
                window.location.href = '@Url.Action("Dashboard", "Tecnico")';
            } else {
                window.location.href = '@Url.Action("Main", "Home")';
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>