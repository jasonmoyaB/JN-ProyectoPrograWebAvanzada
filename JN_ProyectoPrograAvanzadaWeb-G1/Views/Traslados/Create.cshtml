@model JN_ProyectoPrograAvanzadaWeb_G1.Controllers.TrasladoViewModel
@using JN_ProyectoPrograAvanzadaWeb_G1.Services

@{
    ViewData["Title"] = "Nuevo Traslado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-arrow-left-right me-2"></i>Nuevo Traslado
        </h2>
        <a asp-controller="Movimientos" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" id="formTraslado">
                @Html.AntiForgeryToken()

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label">Bodega Origen</label>
                        <input type="text" class="form-control" value="@ViewBag.BodegaOrigen?.Nombre" readonly />
                        <input type="hidden" asp-for="BodegaOrigenID" value="1" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BodegaDestinoID" class="form-label">Bodega Destino <span class="text-danger">*</span></label>
                        <select asp-for="BodegaDestinoID" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            @if (ViewBag.BodegasDestino != null)
                            {
                                @foreach (BodegaDto bodega in (List<BodegaDto>)ViewBag.BodegasDestino)
                                {
                                    <option value="@bodega.BodegaID">@bodega.Nombre</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="BodegaDestinoID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="Referencia" class="form-label">Referencia</label>
                        <input asp-for="Referencia" class="form-control" readonly 
                               value="@($"TRAS-{DateTime.UtcNow:yyyyMMddHHmmss}")" />
                        <small class="text-muted">Generada autom√°ticamente</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Observaciones" class="form-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Productos a Trasladar</h5>
                    <button type="button" class="btn btn-sm btn-primary" id="btnAgregarProducto">
                        <i class="bi bi-plus-circle me-1"></i>Agregar Producto
                    </button>
                </div>

                <div id="productosContainer">
                    
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-controller="Movimientos" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar Traslado
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let productoIndex = 0;
        const productosJson = @Html.Raw(Json.Serialize(ViewBag.Productos));
        const productos = Array.isArray(productosJson) ? productosJson : [];

        $(document).ready(function () {
            console.log('Productos cargados:', productos); 
            
            if (productos.length === 0) {
                console.warn('No hay productos disponibles en Bodega General');
            }
            
            $('#btnAgregarProducto').click(function () {
                agregarFilaProducto();
            });

           
            agregarFilaProducto();
        });

        function agregarFilaProducto() {
            if (!productos || productos.length === 0) {
                alert('No hay productos disponibles en Bodega General con stock');
                return;
            }

            const html = `
                <div class="row mb-3 producto-row" data-index="${productoIndex}">
                    <div class="col-md-5">
                        <label class="form-label">Producto <span class="text-danger">*</span></label>
                        <select name="Detalles[${productoIndex}].ProductoID" class="form-select producto-select" required>
                            <option value="">-- Seleccione --</option>
                            ${productos.map(p => {
                                
                                const productoId = p.ProductoID || 0;
                                const nombre = p.Nombre || '';
                                const sku = p.SKU || '';
                                const stock = p.StockDisponible || 0;
                                const unidadId = p.UnidadID || 0;
                                
                                return `
                                <option value="${productoId}" 
                                        data-stock="${stock}" 
                                        data-unidad="${unidadId}">
                                    ${nombre} (SKU: ${sku}) - Stock: ${stock}
                                </option>
                            `;
                            }).join('')}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cantidad <span class="text-danger">*</span></label>
                        <input type="number" name="Detalles[${productoIndex}].Cantidad" 
                               class="form-control cantidad-input" min="1" step="1" required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Stock Disponible</label>
                        <input type="text" class="form-control stock-display" readonly />
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="button" class="btn btn-sm btn-danger btn-eliminar" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            `;

            $('#productosContainer').append(html);
            productoIndex++;

            
            $(document).on('change', '.producto-select', function () {
                const option = $(this).find('option:selected');
                const stock = parseFloat(option.data('stock')) || 0;
                const row = $(this).closest('.producto-row');
                row.find('.stock-display').val(stock);
                row.find('.cantidad-input').attr('max', stock);
            });

            $(document).on('click', '.btn-eliminar', function () {
                $(this).closest('.producto-row').remove();
            });
        }
    </script>
}

