@model JN_ProyectoPrograAvanzadaWeb_G1.Services.CrearBodegaDto
@{
    ViewData["Title"] = "Editar Bodega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-building me-2"></i>Editar Bodega
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <span class="badge bg-info">ID: @ViewBag.BodegaID</span>
                @{
                    var activo = ViewBag.Activo as bool? ?? false;
                }
                <span class="badge @(activo ? "bg-success" : "bg-secondary") ms-2">
                    Estado: @(activo ? "Activo" : "Inactivo")
                </span>
            </div>

            <form asp-action="Editar" asp-route-id="@ViewBag.BodegaID" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Ubicacion" class="form-label">Ubicaci√≥n</label>
                        <input asp-for="Ubicacion" class="form-control" />
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

