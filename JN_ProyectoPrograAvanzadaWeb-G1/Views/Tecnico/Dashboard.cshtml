@{
    ViewData["Title"] = "Dashboard Técnico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-2">
                <i class="bi bi-speedometer2 me-2"></i>Panel de Control - Técnico
            </h1>
            <p class="text-muted">
                Bienvenido, <strong>@ViewBag.UsuarioNombre</strong>
                @if (ViewBag.BodegaNombre != null)
                {
                    <span class="badge bg-primary ms-2">@ViewBag.BodegaNombre</span>
                }
            </p>
        </div>
    </div>

    <!--  de mi bodega -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Productos en Mi Bodega
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalProductosBodega">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-box-seam fs-1 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Stock Bajo
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="stockBajo">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Mis Solicitudes Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="misSolicitudes">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clipboard-check fs-1 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Movimientos Hoy
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="movimientosHoy">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-left-right fs-1 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seccion para graficos del tecnico -->
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mi Inventario - Gráficos</h6>
                </div>
                <div class="card-body">
                    <div id="graficosMiInventario">
                        <canvas id="chartMiInventario" style="height: 300px;"></canvas>
                        <p class="text-muted text-center mt-3">Los gráficos se cargarán aquí</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Resumen de Mi Bodega</h6>
                </div>
                <div class="card-body">
                    <div id="resumenBodega">
                        <canvas id="chartResumenBodega" style="height: 300px;"></canvas>
                        <p class="text-muted text-center mt-3">Resumen de actividad</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Graficos adicionales -->
    <div class="row">
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mis Movimientos Recientes</h6>
                </div>
                <div class="card-body">
                    <div id="graficoMisMovimientos">
                        <canvas id="chartMisMovimientos" style="height: 250px;"></canvas>
                        <p class="text-muted text-center mt-3">Gráfico de movimientos</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Estado de Mis Solicitudes</h6>
                </div>
                <div class="card-body">
                    <div id="graficoSolicitudes">
                        <canvas id="chartSolicitudes" style="height: 250px;"></canvas>
                        <p class="text-muted text-center mt-3">Estado de solicitudes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas de stock en mi bodega -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Productos con Stock Bajo en Mi Bodega</h5>
                </div>
                <div class="card-body">
                    <div id="alertasMiBodega" class="table-responsive">
                        <p class="text-muted text-center">Cargando alertas...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var bodegaId = @(ViewBag.BodegaID ?? 0);

            $('#totalProductosBodega').text('@(ViewBag.TotalProductos ?? 0)');
            $('#stockBajo').text('@(ViewBag.StockBajo ?? 0)');
            $('#misSolicitudes').text('@(ViewBag.MisSolicitudes ?? 0)');
            $('#movimientosHoy').text('@(ViewBag.MovimientosHoy ?? 0)');
        });
    </script>
}


