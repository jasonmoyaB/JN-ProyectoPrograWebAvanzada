@model JN_ProyectoPrograAvanzadaWeb_G1.Services.CrearSolicitudDto
@{
    ViewData["Title"] = "Nueva Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-plus-circle me-2"></i>Nueva Solicitud
        </h2>
        <div>
            <a asp-action="Solicitudes" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-action="CrearSolicitud" method="post" id="formSolicitud">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="BodegaID" />

                <div class="mb-3">
                    <label class="form-label">Bodega</label>
                    <input type="text" class="form-control" value="@ViewBag.BodegaNombre" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Comentarios" class="form-label">Comentarios (Opcional)</label>
                    <textarea asp-for="Comentarios" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Comentarios" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Productos</h5>
                        <button type="button" class="btn btn-sm btn-primary" id="btnAgregarProducto">
                            <i class="bi bi-plus-circle me-1"></i>Agregar Producto
                        </button>
                    </div>

                    <div id="productosContainer">
                        
                    </div>
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Solicitudes" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Crear Solicitud
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        var productos = @Html.Raw(Json.Serialize(ViewBag.Productos ?? new List<object>()));
        var productoIndex = 0;

        $(document).ready(function () {
            
            console.log('Productos cargados:', productos);
            console.log('Cantidad de productos:', productos ? productos.length : 0);

            if (!productos || productos.length === 0) {
                console.error('No se cargaron productos. Verificar que el servicio est√© funcionando correctamente.');
            }

            $('#btnAgregarProducto').click(function () {
                agregarFilaProducto();
            });

           
            agregarFilaProducto();
        });

        function agregarFilaProducto() {
            var html = `
                <div class="row mb-3 producto-fila" data-index="${productoIndex}">
                    <div class="col-md-5">
                        <select name="Detalles[${productoIndex}].ProductoID" class="form-select producto-select" required>
                            <option value="">-- Seleccione un producto --</option>
                            ${productos.map(p => {
                                var cantidad = p.CantidadDisponible || 0;
                                var cantidadTexto = cantidad > 0 ? ` (Disponible: ${cantidad})` : ' (Sin stock)';
                                return `<option value="${p.ProductoID}" data-cantidad="${cantidad}">${p.SKU} - ${p.Nombre}${cantidadTexto}</option>`;
                            }).join('')}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input type="number" name="Detalles[${productoIndex}].CantidadSolicitada" 
                               class="form-control cantidad-input" 
                               placeholder="Cantidad" 
                               step="1" 
                               min="1" 
                               max=""
                               required />
                        <small class="text-muted stock-disponible-text"></small>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-sm btn-danger btnEliminarFila">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </div>
                </div>
            `;
            $('#productosContainer').append(html);
            
            
            var $select = $('#productosContainer').find('.producto-select').last();
            var $input = $select.closest('.producto-fila').find('.cantidad-input');
            var $stockText = $select.closest('.producto-fila').find('.stock-disponible-text');
            
            $select.on('change', function() {
                var selectedOption = $(this).find('option:selected');
                var cantidadDisponible = parseFloat(selectedOption.data('cantidad')) || 0;
                $input.attr('max', cantidadDisponible);
                if (cantidadDisponible > 0) {
                    $stockText.text(`Stock disponible: ${cantidadDisponible}`).removeClass('text-danger').addClass('text-success');
                } else {
                    $stockText.text('Sin stock disponible').removeClass('text-success').addClass('text-danger');
                }
            });
            
            productoIndex++;
        }

        $(document).on('click', '.btnEliminarFila', function () {
            $(this).closest('.producto-fila').remove();
        });
    </script>
}

