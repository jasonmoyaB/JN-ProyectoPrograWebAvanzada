@model JN_ProyectoPrograAvanzadaWeb_G1.Services.SolicitudDto
@{
    ViewData["Title"] = "Detalle de Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-clipboard-check me-2"></i>Detalle de Solicitud #@Model.SolicitudID
        </h2>
        <div>
            <a asp-action="Solicitudes" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Información General</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            @{
                                var estadoClass = Model.EstadoCodigo switch
                                {
                                    "Pendiente" => "bg-warning",
                                    "Aprobada" => "bg-info",
                                    "Enviada" => "bg-primary",
                                    "Entregada" => "bg-success",
                                    "Rechazada" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @estadoClass ms-2">@Model.EstadoCodigo</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha Creación:</strong>
                            <span class="ms-2">@Model.FechaCreacionUTC.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Bodega:</strong>
                            <span class="ms-2">@Model.BodegaNombre</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Usuario:</strong>
                            <span class="ms-2">@Model.UsuarioNombre</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Comentarios))
                    {
                        <div class="mb-3">
                            <strong>Comentarios:</strong>
                            <p class="mt-2">@Model.Comentarios</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Productos Solicitados</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>SKU</th>
                                <th>Producto</th>
                                <th class="text-end">Cantidad Solicitada</th>
                                <th class="text-end">Cantidad Enviada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td><strong>@detalle.ProductoSKU</strong></td>
                                    <td>@detalle.ProductoNombre</td>
                                    <td class="text-end">@detalle.CantidadSolicitada.ToString("N2")</td>
                                    <td class="text-end">
                                        @if (detalle.CantidadEnviada.HasValue)
                                        {
                                            <span>@detalle.CantidadEnviada.Value.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Historial</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Fecha Creación:</strong>
                        <p class="mb-0">@Model.FechaCreacionUTC.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.FechaAprobacionUTC.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Fecha Aprobación:</strong>
                            <p class="mb-0">@Model.FechaAprobacionUTC.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            @if (!string.IsNullOrEmpty(Model.UsuarioAprobadorNombre))
                            {
                                <small class="text-muted">Por: @Model.UsuarioAprobadorNombre</small>
                            }
                        </div>
                    }
                    @if (Model.FechaEnvioUTC.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Fecha Envío:</strong>
                            <p class="mb-0">@Model.FechaEnvioUTC.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (Model.FechaEntregaUTC.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Fecha Entrega:</strong>
                            <p class="mb-0">@Model.FechaEntregaUTC.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

