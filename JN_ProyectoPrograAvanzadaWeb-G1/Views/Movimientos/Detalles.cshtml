@model JN_ProyectoPrograAvanzadaWeb_G1.Services.MovimientoDto
@{
    ViewData["Title"] = "Detalle de Movimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-info-circle me-2"></i>Detalle de Movimiento #@Model.MovimientoID
        </h2>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver a Movimientos
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informaci√≥n General</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID Movimiento:</dt>
                        <dd class="col-sm-8">@Model.MovimientoID</dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.FechaMovimientoUTC.ToString("dd/MM/yyyy HH:mm") UTC</dd>

                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8">
                            @{
                                var badgeClass = Model.TipoMovimientoNaturaleza > 0 ? "bg-success" : "bg-danger";
                                var tipoNombre = !string.IsNullOrEmpty(Model.TipoMovimientoNombre) ? Model.TipoMovimientoNombre : Model.TipoMovimientoCodigo;
                            }
                            <span class="badge @badgeClass">@Model.TipoMovimientoCodigo</span>
                            <small class="text-muted">(@tipoNombre)</small>
                        </dd>

                        <dt class="col-sm-4">Referencia:</dt>
                        <dd class="col-sm-8">@(Model.Referencia ?? "-")</dd>

                        <dt class="col-sm-4">Bodega:</dt>
                        <dd class="col-sm-8">@Model.BodegaNombre</dd>

                        @if (!string.IsNullOrEmpty(Model.BodegaRelacionadaNombre))
                        {
                            <dt class="col-sm-4">Bodega Relacionada:</dt>
                            <dd class="col-sm-8">@Model.BodegaRelacionadaNombre</dd>
                        }

                        <dt class="col-sm-4">Usuario:</dt>
                        <dd class="col-sm-8">@Model.UsuarioNombre</dd>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <dt class="col-sm-4">Observaciones:</dt>
                            <dd class="col-sm-8">@Model.Observaciones</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Resumen</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-6">Total de Productos:</dt>
                        <dd class="col-sm-6">
                            <strong>@(Model.Detalles?.Count ?? 0)</strong>
                        </dd>

                        <dt class="col-sm-6">Total de Cantidad:</dt>
                        <dd class="col-sm-6">
                            <strong>@(Model.Detalles?.Sum(d => d.Cantidad).ToString("N0") ?? "0")</strong>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Detalles de Productos</h5>
        </div>
        <div class="card-body">
            @if (Model.Detalles == null || !Model.Detalles.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>Este movimiento no tiene productos asociados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th>SKU</th>
                                <th class="text-end">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>
                                        <strong>@detalle.ProductoNombre</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@detalle.ProductoSKU</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="badge bg-primary">@detalle.Cantidad.ToString("N0")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="2" class="text-end">Total:</th>
                                <th class="text-end">@Model.Detalles.Sum(d => d.Cantidad).ToString("N0")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
