@model List<JN_ProyectoPrograAvanzadaWeb_G1.Services.ProductoDto>
@{
    ViewData["Title"] = "Catálogo de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-box-seam me-2"></i>Catálogo de Productos
        </h2>
        <div>
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Nuevo Producto
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <form method="get" class="d-flex gap-2">
                    <input type="text" name="search" class="form-control" placeholder="Buscar por SKU o nombre..." value="@ViewBag.SearchTerm" style="max-width: 300px;" />
                    <select name="activo" class="form-select" style="width: auto;">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.FiltroActivo == true)">Activos</option>
                        <option value="false" selected="@(ViewBag.FiltroActivo == false)">Inactivos</option>
                    </select>
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search me-1"></i>Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
                </form>
            </div>

            <table id="tablaProductos" class="table table-sm table-hover align-middle">
                <thead class="table-light">
                    <tr class="text-muted">
                        <th>ID</th>
                        <th>SKU</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Serializado</th>
                        <th>Estado</th>
                        <th>Fecha Creación</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.ProductoID</td>
                            <td><strong>@producto.SKU</strong></td>
                            <td>@producto.Nombre</td>
                            <td>@(producto.Descripcion ?? "-")</td>
                            <td>
                                @if (producto.EsSerializado)
                                {
                                    <span class="badge bg-info">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <span class="badge rounded-pill @(producto.Activo ? "bg-success" : "bg-secondary")">
                                    @(producto.Activo ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="DistribucionBodegas" asp-route-id="@producto.ProductoID" class="btn btn-sm btn-outline-info me-1" title="Ver distribución por bodegas">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Editar" asp-route-id="@producto.ProductoID" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="ToggleActivo" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@producto.ProductoID" />
                                    <button type="submit" class="btn btn-sm btn-outline-@(producto.Activo ? "warning" : "success")" title="@(producto.Activo ? "Desactivar" : "Activar")">
                                        <i class="bi bi-@(producto.Activo ? "x-circle" : "check-circle")"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablaProductos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                pageLength: 10,
                lengthChange: true,
                ordering: true,
                responsive: true
            });
        });

        function confirmarEliminacion(nombre) {
            return confirm('¿Está seguro que desea eliminar el producto "' + nombre + '"?\n\nEsta acción no se puede deshacer.');
        }
    </script>
}


