
@model List<JN_ProyectoPrograAvanzadaWeb_G1.Services.SaldoInventarioDto>
@{
    ViewData["Title"] = "Distribución de Bodegas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var producto = ViewBag.Producto as JN_ProyectoPrograAvanzadaWeb_G1.Services.ProductoDto;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-box-seam me-2"></i>Distribución de Bodegas
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (producto != null)
    {
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <h5 class="card-title">Información del Producto</h5>
                <div class="row">
                    <div class="col-md-3">
                        <strong>SKU:</strong> @producto.SKU
                    </div>
                    <div class="col-md-6">
                        <strong>Nombre:</strong> @producto.Nombre
                    </div>
                    <div class="col-md-3">
                        <strong>Estado:</strong>
                        <span class="badge rounded-pill @(producto.Activo ? "bg-success" : "bg-secondary")">
                            @(producto.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(producto.Descripcion))
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <strong>Descripción:</strong> @producto.Descripcion
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-building me-2"></i>Distribución por Bodegas</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Bodega</th>
                                <th>Cantidad</th>
                                <th>Stock Mínimo</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.BodegaNombre</strong></td>
                                    <td>
                                        <span class="badge bg-info fs-6">@item.Cantidad.ToString("N2")</span>
                                        @if (!string.IsNullOrEmpty(item.UnidadNombre))
                                        {
                                            <small class="text-muted">@item.UnidadNombre</small>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StockMinimo.HasValue)
                                        {
                                            <span>@item.StockMinimo.Value.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AlertaStockBajo)
                                        {
                                            <span class="badge bg-warning">Stock Bajo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Normal</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <th>Total</th>
                                <th><strong>@Model.Sum(x => x.Cantidad).ToString("N2")</strong></th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Este producto no tiene inventario en ninguna bodega.
                </div>
            }
        </div>
    </div>
</div>
