
@model JN_ProyectoPrograAvanzadaWeb_G1.Models.ViewModels.RecuperarClaveViewModel
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<section class="vh-100" style="background: linear-gradient(135deg, #283e51 0%, #485563 100%);">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-xl-10">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="row g-0">
                        <!-- Imagen lateral -->
                        <div class="col-md-6 d-none d-md-block order-md-2">
                            <div class="h-100 w-100"
                                 style="
                                    background:
                                    linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.45)),
                                    url('https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&w=1600&q=80')
                                    center/cover no-repeat;">
                            </div>
                        </div>

                        <!-- Formulario -->
                        <div class="col-md-6 d-flex align-items-center bg-white">
                            <div class="card-body p-5 text-center w-100">

                                <img src="https://cdn-icons-png.flaticon.com/512/3064/3064197.png"
                                     alt="Recuperar contraseña" width="80" class="mb-3" />

                                <h1 class="h4 fw-bold text-primary mb-2 text-uppercase">Recuperar contraseña</h1>
                                <p class="text-muted mb-4">Ingresa tu correo electrónico y te enviaremos una nueva clave temporal</p>

                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger">@ViewBag.Error</div>
                                }

                                @if (TempData["Mensaje"] != null)
                                {
                                    <div class="alert alert-success">@TempData["Mensaje"]</div>
                                }

                                <form asp-action="RecuperarClave" method="post">
                                    @Html.AntiForgeryToken()
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                    <div class="mb-3 text-start">
                                        <label asp-for="CorreoElectronico" class="form-label fw-semibold">Correo electrónico</label>
                                        <input asp-for="CorreoElectronico" class="form-control form-control-lg border-secondary" placeholder="ejemplo@correo.com" />
                                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                                    </div>

                                    <div class="d-grid mt-4">
                                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Enviar nueva contraseña</button>
                                    </div>

                                    <div class="mt-4 text-center small">
                                        <a asp-controller="Autenticacion" asp-action="Login" class="link-primary text-decoration-none fw-semibold">
                                            ← Volver al inicio de sesión
                                        </a>
                                    </div>
                                </form>

                                <partial name="_ValidationScriptsPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
