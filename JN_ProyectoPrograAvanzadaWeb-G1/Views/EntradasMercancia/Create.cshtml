@model JN_ProyectoPrograAvanzadaWeb_G1.Models.EntradaMercancia

@{
    ViewData["Title"] = "Nueva Entrada de Mercancía";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-box-seam me-2"></i>Nueva Entrada de Mercancía
        </h2>

        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <!-- Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <!-- Errores -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">

                    <!-- Usuario -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">
                            Usuario <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" value="@ViewBag.UsuarioNombre" readonly />
                        <input type="hidden" asp-for="UsuarioID" value="@ViewBag.UsuarioID" />
                        <span asp-validation-for="UsuarioID" class="text-danger"></span>
                    </div>

                    <!-- Tipo Movimiento -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="TipoMovimientoID" class="form-label">
                            Tipo de Movimiento <span class="text-danger">*</span>
                        </label>
                        <select asp-for="TipoMovimientoID" class="form-select" asp-items="ViewBag.TiposMovimiento" required>
                            <option value="">-- Seleccione --</option>
                        </select>
                        <span asp-validation-for="TipoMovimientoID" class="text-danger"></span>
                    </div>

                    <!-- Cantidad -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="Cantidad" class="form-label">
                            Cantidad <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Cantidad" type="number" min="1" step="1" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">

                    <!-- Producto -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductoID" class="form-label">
                            Producto <span class="text-danger">*</span>
                        </label>
                        <select asp-for="ProductoID"
                                class="form-select"
                                asp-items="ViewBag.Productos">
                            <option value="">-- Seleccione --</option>
                        </select>
                        <span asp-validation-for="ProductoID" class="text-danger"></span>
                    </div>

                    <!-- Bodega -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">
                            Bodega <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" value="@ViewBag.BodegaNombre" readonly />
                        <input type="hidden" asp-for="BodegaID" value="@ViewBag.BodegaID" />
                        <span asp-validation-for="BodegaID" class="text-danger"></span>
                    </div>
                </div>

                <!-- Observaciones -->
                <div class="mb-3">
                    <label asp-for="Observaciones" class="form-label">Observaciones</label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
