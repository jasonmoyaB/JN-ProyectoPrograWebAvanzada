@model JN_ProyectoPrograAvanzadaWeb_G1.Models.EntradaMercancia

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="mb-0 text-secondary">
            <i class="bi bi-pencil-square me-2"></i>Editar Entrada de Mercancía
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="EntradaID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">

                    <div class="col-md-4 mb-3">
                        <label asp-for="UsuarioID" class="form-label">Usuario</label>
                        <select asp-for="UsuarioID" asp-items="ViewBag.Usuarios"
                                class="form-select"></select>
                        <span asp-validation-for="UsuarioID" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="ProductoID" class="form-label">Producto</label>
                        <select asp-for="ProductoID" asp-items="ViewBag.Productos"
                                class="form-select"></select>
                        <span asp-validation-for="ProductoID" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="BodegaID" class="form-label">Bodega</label>
                        <select asp-for="BodegaID" asp-items="ViewBag.Bodegas"
                                class="form-select"></select>
                        <span asp-validation-for="BodegaID" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Cantidad" class="form-label">Cantidad</label>
                        <input asp-for="Cantidad" type="number" min="1" step="1" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="TipoMovimiento" class="form-label">Movimiento</label>
                        <input asp-for="TipoMovimiento" class="form-control" />
                        <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="FechaEntrada" class="form-label">Fecha</label>
                        <input asp-for="FechaEntrada" class="form-control" readonly />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i>Guardar Cambios
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
